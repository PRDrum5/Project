{
    "experiment_name": "LRW_SHAPE_CLASSIFER",
    "n_gpu": 1,
    "resume": true,

    "arch": {
        "spec": "Lrw_Shape_Classifier",
        "args": {}
    },
    "optimizer": {
        "spec": "Adam",
        "args": {
            "lr": 0.00002,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss_func": {
        "spec": "nll_loss"
    },
    "data_loader": {
        "spec": "DataLoaderLrwShapes",
        "args":{
            "blendshapes_dir": "data/lrw_shape_params/",
            "batch_size": 256,
            "shuffle": true,
            "train_split": 0.8,
            "n_workers": 6,
            "tsfm": ["LrwShapesToTensor"]
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "level": 2,
        "tensorboard": true
    }
}