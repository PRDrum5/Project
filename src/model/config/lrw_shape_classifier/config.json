{
    "experiment_name": "LRW_SHAPE_CLASSIFER",
    "n_gpu": 1,
    "resume": true,

    "arch": {
        "spec": "Lrw_Shape_Classifier",
        "args": {}
    },
    "optimizer": {
        "spec": "Adam",
        "args": {
            "lr": 0.00001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss_func": {
        "spec": "nll_loss"
    },
    "lr_scheduler": {
        "spec": "ExponentialLR",
        "args": {
            "gamma": 0.99
        }
    },
    "data_loader": {
        "spec": "DataLoaderLrwShapes",
        "args":{
            "blendshapes_dir": "data/lrw_shape_params/train",
            "batch_size": 128,
            "shuffle": true,
            "train_split": 0.625,
            "n_workers": 6,
            "tsfm": ["LrwShapesToTensor"]
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 100,
        "level": 2,
        "tensorboard": true
    }
}
