{
    "experiment_name": "MFCC_Shape_Gan",
    "n_gpu": 1,
    "resume": true,
    "data_loader": {
        "spec": "DataLoaderWavShapes",
        "args":{
            "wav_path": "data/lrw_audio/",
            "blendshapes_path": "data/lrw_shape_params/",
            "batch_size": 16,
            "shuffle": true,
            "train_split": 0.999,
            "n_workers": 0,
            "drop_last": true,
            "tsfm": ["SpecShapesToTensor"]
        }
    },
    "vis_loader": {
        "spec": "DataLoaderWavShapes",
        "args":{
            "wav_path": "data/lrw_audio/",
            "blendshapes_path": "data/lrw_shape_params/",
            "batch_size": 128,
            "shuffle": false,
            "train_split": 1.00,
            "n_workers": 1,
            "drop_last": false,
            "tsfm": ["MergeFrameToMfccDuration", "OneSecondMfccCrop", "SpecShapesToTensor"]
        }
    },
    "trainer": {
        "epochs": 2,
        "disc_gen_ratio": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "level": 2,
        "tensorboard": true
    },
    "generator": {
        "arch": {
            "spec": "MFCC_Shape_Gen",
            "args": {
                "z_dim": 10,
                "shapes_dim": 4
            }
        },
        "optimizer": {
            "spec": "Adam",
            "args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        },
        "loss_func": {
            "spec": "wasserstein_g_loss"
        }
    },
    "discriminator": {
        "arch": {
            "spec": "MFCC_Shape_Critic",
            "args": {
                "shapes_dim": 4
            }
        },
        "optimizer": {
            "spec": "Adam",
            "args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        },
        "loss_func": {
            "spec": "wasserstein_d_loss",
            "gradient_penalty": 10
        }
    }
}