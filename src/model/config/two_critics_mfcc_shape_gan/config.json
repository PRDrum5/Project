{
    "experiment_name": "Two_Critics_MFCC_Shape_Gan",
    "n_gpu": 1,
    "resume": true,
    "data_loader": {
        "spec": "DataLoaderWavShapes",
        "args":{
            "wav_path": "data/lrw_audio/",
            "blendshapes_path": "data/lrw_shape_params/",
            "batch_size": 128,
            "shuffle": true,
            "train_split": 1.0,
            "n_workers": 0,
            "drop_last": true,
            "tsfm": ["SpecShapesToTensor"]
        }
    },
    "vis_loader": {
        "spec": "DataLoaderWavShapes",
        "args":{
            "wav_path": "data/lrw_audio/",
            "blendshapes_path": "data/lrw_shape_params/",
            "batch_size": 32,
            "shuffle": true,
            "train_split": 1.00,
            "n_workers": 0,
            "drop_last": false,
            "tsfm": ["SpecShapesToTensor"]
        }
    },
    "trainer": {
        "epochs": 100,
        "critic_1_train": 1,
        "critic_2_train": 2,
        "gen_train": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "level": 2,
        "tensorboard": true
    },
    "generator": {
        "arch": {
            "spec": "Mfcc_Shape_Gen",
            "args": {
                "z_dim": 2,
                "shapes_dim": 4
            }
        },
        "optimizer": {
            "spec": "RMSprop",
            "args": {
                "lr": 0.00005
            }
        },
        "loss_func": {
            "spec": "wasserstein_g_loss"
        }
    },
    "mfcc_critic": {
        "arch": {
            "spec": "Mfcc_Shape_Critic",
            "args": {
                "shapes_dim": 4
            }
        },
        "optimizer": {
            "spec": "RMSprop",
            "args": {
                "lr": 0.00005
            }
        },
        "loss_func": {
            "spec": "wasserstein_d_loss",
            "gradient_penalty": 5
        }
    },
    "shape_critic": {
        "arch": {
            "spec": "Shape_Critic",
            "args": {
                "shapes_dim": 4
            }
        },
        "optimizer": {
            "spec": "RMSprop",
            "args": {
                "lr": 0.00005
            }
        },
        "loss_func": {
            "spec": "wasserstein_d_loss",
            "gradient_penalty": 5
        }
    }
}
